<Window x:Class="Keeper.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LogIn" Height="280" Width="400">
    <Grid Margin="0,0,0,0">
        <Label x:Name="LoginEmailLabel" Content="Email" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="372"/>
        <TextBox x:Name="LoginEmailTextBox" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372"/>
        <Label x:Name="LoginPasswordLabel" Content="Password" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="372"  />
        <PasswordBox x:Name="LoginPasswordPasswordBox" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" KeyDown="LoginPasswordPasswordBox_KeyDown" Width="372"/>
        <TextBlock x:Name="LoginValidationMessageTextBlock" HorizontalAlignment="Left" Margin="10,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="372"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="312,218,0,0" VerticalAlignment="Top" Click="LoginButton_Click" RenderTransformOrigin="-2.242,6.5" Width="70"/>
    </Grid>
</Window>
