<Window x:Class="Keeper.WPF.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keeper.WPF"
        mc:Ignorable="d"
        Title="DeleteUserWindow" Height="350" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="UserTxtBlock" HorizontalAlignment="Left" Margin="125,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="150" Height="30" FontSize="20" TextAlignment="Center"><Run Text="User"/><LineBreak/><Run/></TextBlock>
        <ComboBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="125,74,0,0" VerticalAlignment="Top" Width="150" FontSize="20"/>
        <Button x:Name="DeleteUserButton" Grid.ColumnSpan="2" Content="Delete" HorizontalAlignment="Left" Margin="150,210,0,0" VerticalAlignment="Top" Width="100" FontSize="20" Height="31" Click="DeleteUserButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="125,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="150" Height="35" FontSize="20" TextAlignment="Center"/>

    </Grid>
</Window>
